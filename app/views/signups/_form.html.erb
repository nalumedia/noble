<%= form_for(@signup) do |f| %>
  <% if @signup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@signup.errors.count, "error") %> prohibited this signup from being saved:</h2>

      <ul>
      <% @signup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "your name:" %><br>
    <%= f.text_field :signup_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "your email address:" %><br>
    <%= f.text_field :signup_email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "your phone number:" %><br>
    <%= f.text_field :signup_phone, class: "form-control" %>
  </div>

<div class="form-group">
    <%= f.label "device type (iphone / android):" %><br>
   <%= f.select "signup_type", ['iphone', 'android'] %>
  </div> 

  <% if user_signed_in? %>
  <div class="form-group">
    <%= f.label "WMP status:" %><br>
    <%= f.select "signup_status", ['Pending Approval', 'Approved', 'Setup in WMP'], class: "form-control" %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Get GridMeNow", class: "btn btn-default" %>
  </div>
<% end %>
