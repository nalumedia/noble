<% if user_signed_in? %>

<% @users = User.order("email ASC") %>
<h1>Admin Users (<%= User.count %>)</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><strong>User Name:</strong></th>
      <th><strong>User Info:</strong></th>
     
    </tr>
  </thead>

  <tbody>
				    <% @users.each do |user| %>
				      <tr>
				      <td>

				          <b><i>Email:</b></i> <%= user.email %> <br />
				          <b><i>User ID:</b></i> <%= user.id %> <br />
				         </td> 

				       </td>
				      <td><b><i>Number of Logins:</b></i> <%= user.sign_in_count %> <br />
				          <b><i>Last Sign In Time:</b></i>  <%= user.last_sign_in_at.to_formatted_s(:long_ordinal) %><br />
				          <b><i>Last Sign In IP:</b></i>  <%= user.last_sign_in_ip %><br />
				          <b><i>Created:</b></i>  <%= user.created_at.to_formatted_s(:long_ordinal) %> <br />
				  
				  
				        </td>

				      </tr>
				    <% end %>
  </tbody>
</table>

<% else %>
YOU DO NOT HAVE PERMISSION TO ENTER THIS AREA 
<% end %>




